@model ProfileModel

<div class="jumbotron jumbotron-fluid">

    <div class="container emp-profile">
       
        <div class="row jumbotron jumbotron-fluid">
            <div class="col-md-4 ml-3">
                <div class="list-group">
                    <a asp-controller="Profile" asp-action="MyProfile" class="list-group-item list-group-item-action active">
                        Overview
                    </a>
                    <a asp-controller="Profile" asp-action="ChangePassword" class="list-group-item list-group-item-action">
                        Change Password
                    </a>
                    <a asp-controller="Profile" asp-action="ChangeEmail" class="list-group-item list-group-item-action">
                        Change Email
                    </a>
                </div>
            </div>
            <div class="col-md-7">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="row">
                        <form class="col-12" method="post" asp-controller="Profile" asp-action="EditProfile">
                            <fieldset>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Username">Username</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input disabled type="text" id="Username" name="Username" class="form-control" value="@Model.user.UserName">
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Name">Name</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" id="Name" name="Name" class="form-control" value="@Model.details.Name">
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Email">Email</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input disabled type="text" id="Email" name="Email" class="form-control" value="@Model.user.Email">
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="PhoneNumber">Phone Number</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.user.PhoneNumber">
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Address">Address</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" id="Address" name="Address" class="form-control" value="@Model.details.Address">
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Description">Description</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" id="Description" name="Description" class="form-control" value="@Model.details.Description">
                                    </div>
                                </div>
                            </fieldset>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary mb-2 btn-lg">Edit</button>
                            </div>
                            <hr class="mt-1 mb-1" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
